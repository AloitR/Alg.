			llegir_entrada_standard()				C6 = 1
			parametres = False					C7 = 1
			llegir_fitxer(parametres)				C8 = 1
			buscar_lloc()						C9 = 1
		except IndexError:						C10 = 1
			print "[Error] Format de dades incorrecte."		C11 = 1
	else: #En cas d'haber parametres d'entrada				C12 = 1
		try:								C13 = 1
			parametres = True					C14 = 1
			llegir_fitxer(parametres)				C15 = 1
			buscar_lloc()						C16 = 1
		except IOError:							C17 = 1
			print "[Error] No s'ha pogut trobar el fitxer especificat." C18 = 1
			# Tractament d'error en cas de fitxer inexistent.	

def llegir_entrada_standard():
	new_hangar = open("landings.txt", 'w') # No parametre -> arxiu per defecte.	C19 = 1
	print "[Info] Introdueix una llista amb format: 'nom-nau' 'posicio-hangar'" 	C20 = 1
	print "[Info] Per acabar, prem [Enter] en una linea en blanc."			C21 = 1
	acabat = False									C30 = 1
	while (acabat != True): #Anar llegint i escribint d'entrada standard.		C31 = N + 1
		llista = raw_input()							C32 = N
		if(llista == ""):							C33 = N
			acabat = True							C34 = N 	
